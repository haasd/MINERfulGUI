<GridPane GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="minerful.gui.controller.ModelGeneratorController">
	<children>	
		<!-- Area-Header -->
		<HBox spacing="5" styleClass="area-header" alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" >
			<Label styleClass="area-header-label" text="Generate/Modify Model" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
			<Button styleClass="btn-default, btn-header" text="Modify Process Model" onAction="#selectModel">
				<graphic>
           			<FontIcon iconColor="#00a6fb" iconLiteral="typ-flow-switch" iconSize="30" layoutX="20.0" layoutY="91.0" textAlignment="CENTER" wrappingWidth="26.0" />
            	</graphic>
			</Button>
			<Button styleClass="btn-default, btn-header" text="New Process Model" onAction="#createModel">
				<graphic>
           			<FontIcon iconColor="#00a6fb" iconLiteral="typ-flow-children" iconSize="30" layoutX="20.0" layoutY="91.0" textAlignment="CENTER" wrappingWidth="26.0" />
            	</graphic>
			</Button>
		</HBox>
		
		<!-- TabPane -->
		<TabPane fx:id="modelGeneratorTabPane" GridPane.columnIndex="0" GridPane.rowIndex="1">
        </TabPane> 
	</children>
	<rowConstraints>
		<RowConstraints/>
	  	<RowConstraints vgrow="ALWAYS" />
	</rowConstraints>
	<columnConstraints>
		<ColumnConstraints percentWidth="100.0" />
	</columnConstraints>
</GridPane>