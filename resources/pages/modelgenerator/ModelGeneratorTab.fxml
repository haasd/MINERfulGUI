<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="minerful.gui.controller.ModelGeneratorTabController">
	<children>
		<!-- Sidebar  -->
		<VBox styleClass="section, section-menu"  style="-fx-background-color: white;" GridPane.columnIndex="0" GridPane.rowIndex="0">
         	<children>
         		
         		<!-- Activities -->
				<Label styleClass="section-header1" text="Activities">
				</Label>
				<ListView fx:id="activitiesList" styleClass="table">
    			</ListView>
    			<Button styleClass="btn-default" text="Add Activity" />         			
    			
    			<!-- Constraints -->
    			<Label styleClass="section-header2" text="Constraints"/>
       			<ListView fx:id="constraintsList" styleClass="table">
 				</ListView>
				<Button styleClass="btn-default" text="Add Constraint" /> 
         	</children>
		</VBox>
		
		<!-- Model -->
		<GridPane styleClass="section" GridPane.columnIndex="1" GridPane.rowIndex="0" hgap="30">
         	<children>
         		<!-- Canvas -->
	         	<GridPane styleClass="area-content" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
	         		<children>
	         			<HBox style="-fx-spacing: 10; -fx-padding: 5px;">
		         			<Label styleClass="section-header1" text="Model" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
		         			<Button styleClass="btn-default, btn-save" text="Save" onAction="#saveModel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
		         			<Button styleClass="btn-default" text="Export" onAction="#exportFile" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
		         		</HBox>
	         			<VBox fx:id="canvasBox" styleClass="model-canvas" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="3">
	         			</VBox>
	         		</children>
	         		<columnConstraints>
				        <ColumnConstraints hgrow="ALWAYS" />
					</columnConstraints>
					<rowConstraints>
					   <RowConstraints />
					   <RowConstraints vgrow="ALWAYS" />
					</rowConstraints>
	         	</GridPane>
       			
         	</children>
			<rowConstraints>
			   <RowConstraints vgrow="ALWAYS" />
			</rowConstraints>
			<columnConstraints>
				<ColumnConstraints hgrow="ALWAYS" />
			</columnConstraints>
        </GridPane>
       </children>
       <columnConstraints>
			<ColumnConstraints percentWidth="30.0" />
			<ColumnConstraints percentWidth="70.0" />
	</columnConstraints>
	<rowConstraints>
			   <RowConstraints vgrow="ALWAYS" />
	</rowConstraints>
</GridPane>

