<GridPane xmlns:fx="http://javafx.com/fxml/" fx:controller="minerful.gui.controller.AddElementController">
	<children>
		<VBox style="-fx-padding: 20px;" spacing="10" fx:id="vbox" GridPane.columnIndex="0" GridPane.rowIndex="0">
			<Label text="Activity: ">
			</Label>
			<TextField fx:id="activityname"></TextField>
			<Label text="Constraint: ">
			</Label>
			<VBox spacing="5" style="-fx-padding: 0 0 10px 0;" fx:id="constraints"></VBox>
			<HBox alignment="CENTER" spacing="40">
				<Button fx:id="btnCancel" text="Cancel" styleClass="btn-default" onAction="#cancel"/>
				<Button fx:id="btnActivity" text="Add Activity" styleClass="btn-default" onAction="#addActivity"/>
	    	</HBox>
		</VBox>
	</children>
	<rowConstraints>
		<RowConstraints vgrow="ALWAYS" />
	</rowConstraints>
	<columnConstraints>
		<ColumnConstraints hgrow="ALWAYS" />
	</columnConstraints>
</GridPane>

